<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/ll_weather_data_today_item"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:gravity="center"
        android:layout_height="match_parent">
        
        <TextView
            android:id="@+id/tv_date_in_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:text="@string/test_today_date"/>
        
        <TextView
            android:id="@+id/tv_max_temp_in_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/test_max_temp"/>

        <TextView
            android:id="@+id/tv_min_temp_in_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/test_max_temp"/>
        
        </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_weather_icon_today_item"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_weather_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            android:padding="10dp"/>
        
        <TextView
            android:id="@+id/tv_weather_in_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/test_weather_desc"/>
    </LinearLayout>
    
</LinearLayout>