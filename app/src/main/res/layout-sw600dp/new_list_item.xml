<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector">

    <ImageView
        android:id="@+id/iv_weather_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="14dp"
        android:src="@drawable/ic_cloudy"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ll_weather_desc"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_date_in_list_item"
            style="@style/list_item_text_view_22sp"
            android:text="@string/test_date"/>

        <TextView
            android:id="@+id/tv_weather_in_list_item"
            style="@style/list_item_text_view_14sp"
            android:text="@string/test_weather_desc"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_temp_desc"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_max_temp_in_list_item"
            style="@style/list_item_text_view_22sp"
            android:gravity="center"
            android:text="@string/test_max_temp"/>

        <TextView
            android:id="@+id/tv_min_temp_in_list_item"
            style="@style/list_item_text_view_14sp"
            android:gravity="center"
            android:text="@string/test_min_temp"/>

    </LinearLayout>

</LinearLayout>